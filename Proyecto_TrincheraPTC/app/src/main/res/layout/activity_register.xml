<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@drawable/imagenlogin">

    <ImageView
        android:id="@+id/imgAtras"
        android:layout_width="22dp"
        android:layout_height="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074"
        app:srcCompat="@drawable/atrasverde" />

    <ScrollView
        android:layout_width="412dp"
        android:layout_height="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="800dp"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/txtRegistrarCorreo"
                android:layout_width="354dp"
                android:layout_height="41dp"
                android:background="@drawable/campooutline"
                android:ems="10"
                android:fontFamily="@font/source_sans_pro_black"
                android:inputType="text"
                android:textColor="#262626"
                android:textColorHint="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.482"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.381" />

            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="355dp"
                android:layout_height="70dp"
                android:backgroundTint="#FFC072"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="Iniciar sesión"
                android:textColor="#262626"
                android:textSize="22sp"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.925" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_bold"
                android:text="¿Ya tienes una cuenta?"
                android:textColor="#EA986A"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.804" />

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="355dp"
                android:layout_height="70dp"
                android:backgroundTint="#FFC072"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:shadowColor="#000000"
                android:shadowDx="4"
                android:shadowDy="4"
                android:text="Continuar"
                android:textColor="#262626"
                android:textSize="22sp"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.73" />

            <EditText
                android:id="@+id/txtConfimacionContrasena"
                android:layout_width="354dp"
                android:layout_height="41dp"
                android:background="@drawable/campooutline"
                android:ems="10"
                android:fontFamily="@font/source_sans_pro_black"
                android:inputType="textPassword"
                android:textColor="#262626"
                android:textColorHint="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.595" />

            <ImageView
                android:id="@+id/imageVi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.118"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.562"
                app:srcCompat="@drawable/camponombre" />

            <ImageView
                android:id="@+id/imageVie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.118"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.463"
                app:srcCompat="@drawable/camponombre" />

            <ImageView
                android:id="@+id/imageView99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.118"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.257"
                app:srcCompat="@drawable/camponombre" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.118"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.36"
                app:srcCompat="@drawable/camponombre" />

            <TextView
                android:id="@+id/tvEMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_black"
                android:text="E-Mail"
                android:textColor="#80000000"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                app:layout_constraintEnd_toEndOf="@+id/imageView9"
                app:layout_constraintHorizontal_bias="0.488"
                app:layout_constraintStart_toStartOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="@+id/imageView9"
                app:layout_constraintVertical_bias="0.312" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_black"
                android:text="Contraseña"
                android:textColor="#80000000"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageVie"
                app:layout_constraintEnd_toEndOf="@+id/imageVie"
                app:layout_constraintStart_toStartOf="@+id/imageVie"
                app:layout_constraintTop_toTopOf="@+id/imageVie" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_black"
                android:text="Conf. Contraseña"
                android:textColor="#80000000"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageVi"
                app:layout_constraintEnd_toEndOf="@+id/imageVi"
                app:layout_constraintHorizontal_bias="0.461"
                app:layout_constraintStart_toStartOf="@+id/imageVi"
                app:layout_constraintTop_toTopOf="@+id/imageVi" />

            <EditText
                android:id="@+id/txtRegistrarContrasena"
                android:layout_width="354dp"
                android:layout_height="41dp"
                android:background="@drawable/campooutline"
                android:ems="10"
                android:fontFamily="@font/source_sans_pro_black"
                android:inputType="textPassword"
                android:textColor="#262626"
                android:textColorHint="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.482"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.489" />

            <ImageView
                android:id="@+id/imgRegistrarPFP"
                android:layout_width="170dp"
                android:layout_height="173dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.098"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.023"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/btnSubirImagen"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFC072"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:shadowColor="#000000"
                android:shadowDx="4"
                android:shadowDy="4"
                android:text="Subir imagen"
                android:textColor="#262626"
                android:textSize="14sp"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.858"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.041" />

            <Button
                android:id="@+id/btnTomarFoto"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFC072"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:shadowColor="#000000"
                android:shadowDx="4"
                android:shadowDy="4"
                android:text="Tomar foto"
                android:textColor="#262626"
                android:textSize="14sp"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.858"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.158" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_black"
                android:text="Nombre"
                android:textColor="#80000000"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView99"
                app:layout_constraintEnd_toEndOf="@+id/imageView99"
                app:layout_constraintStart_toStartOf="@+id/imageView99"
                app:layout_constraintTop_toTopOf="@+id/imageView99" />

            <EditText
                android:id="@+id/txtRegistrarNombre"
                android:layout_width="354dp"
                android:layout_height="41dp"
                android:background="@drawable/campooutline"
                android:ems="10"
                android:fontFamily="@font/source_sans_pro_black"
                android:inputType="text"
                android:textColor="#262626"
                android:textColorHint="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.413"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.28" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>